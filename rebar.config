{port_env, [
    {"DRV_LDFLAGS", "-laerospike -shared $ERL_LDFLAGS"},
    {"darwin", "DRV_LDFLAGS", "-laerospike -bundle -flat_namespace -undefined suppress $ERL_LDFLAGS"},
    {"DRV_CFLAGS", "-Ic_src -g -Wall -fPIC $ERL_CFLAGS"}
]}.

{port_specs, [{"priv/aerospike_drv.so", ["c_src/*.c"]}]}.

{deps, [
    {'poolboy', "", {git, "https://github.com/devinus/poolboy.git", {branch, master}}}
]}.

{erl_opts, [debug_info, warnings_as_errors]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
